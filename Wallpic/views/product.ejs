<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <%- include('./partials/head') %> 
</head>
<body>
    <div>
        <%- include('./partials/header') %>
        <br>
        <br>
        <br>
        <section class="product-info">
            <article class='imagenes'>
                <div class='img-extra'>
                    <figure>
                        <a href="#">
                            <img src="/Images/products/<%=product.images %> " alt="">
                        </a>
                    </figure>
                    <figure>
                        <a href="#">
                            <img src="/Images/products/<%=product.images %> " alt="">
                        </a>
                    </figure>
                    <figure>
                        <a href="#">
                            <img src="/Images/products/<%=product.images %> " alt="">
                        </a>
                    </figure>
                </div>
                <div class='img-principal'>
                    <figure>
                        <img src="/Images/products/<%=product.images %> " alt="">
                    </figure>
                </div>
                <div class="contenedor-flex">
                    <div class='seleccion'>
                        <div class='product-txt'>
                            <p><%= product.name %> </p>
                            <h2 class="main-price">$<%= sizes[0].price %> </h2>
                            <p id="medio-de-pago-tag">Medios de pago</p>
                        </div>
                        <div class='tarjetas'>
                            <i class="fab fa-cc-visa"></i>
                            <i class="fab fa-cc-mastercard"></i>
                            <i class="fab fa-cc-amex"></i>
                        </div>
                    </div>
                    <form action="/user/addToCart" method="POST" class="product-form">
                        <div class='dropdowns'>
                            <ul>
                                <li class="color-li">
                                    <a href="#">Marco</a>
                                    <div class='sub-menu-1'>
                                        <select class="select-color" name="checkColor" id="color">
                                            <% colors.forEach(color => { %>
                                            <option value="<%= color.color %>"><%= color.color %> </option>
                                            <% }); %>
                                        </select>
                                    </div>
                                </li>
                                <li class="size-li">
                                    <a href="#">Tama√±o</a>
                                    <div class='sub-menu-2'>
                                        <select class="select-size" name="check" id="size" value="">
                                            <% sizes.forEach(size => { %>
                                            <option class="size-input" id="<%= size.price %>" value="<%= size.price %>,<%= size.size %>"><%= size.size %></option>
                                            <% }); %>
                                        </select>
                                        <input class="checkPrice" type="hidden" name="checkPrice" value="<%= sizes[0].price %> ">
                                        <input class="checkSize" type="hidden" name="checkSize" value="">
                                    </div>
                                </li>
                            </ul>
                        </div>
                        <div class="add-to-cart-button-container">
                            <!-- <label for="quantity">Cantidad</label>
                            <input type="number" id="quantity" class="quantity" name="checkQuantity" value="1"> -->
                            <input type="hidden" name="checkName" value="<%= product.name %>">
                            <input type="hidden" name="checkImage" value="<%= product.images %>">
                            <button type="submit" class='add-to-cart-main'>Agregar al carrito</button>
                        </div>
                </div>
            </article>
            </form>
        </section>
        <div class='descripcion-contenedor'>
        <section class='descripcion'>
            <h2 class='descripcion-header'>Sobre este producto</h2>
            <article class='about'> <%= product.description %> </article>
            <h2 class='descripcion-footer'> <br> </h2>
        </section>
        </div>
        <br>
        <br>

        <section class='related'>
            <h2 class='descripcion-header'>Productos relacionados</h2>
            <div class='contenedor-related'>
                <section class="prod-related">
                    <figure class='img-related-1'>
                        <img src="/Images/products/image-1599431202764.jpg" alt="">
                    </figure>
                    <figure class='img-related-2'>
                        <img src="/Images/products/image-1599431231566.jpg" alt="">
                    </figure>
                </section>
                <section class='txt-related'>
                    <article class='txt-related-1'>
                        <p> Couple of deers </p>
                        <h2>$590</h2>
                        <button class='add-to-cart'>Agregar al carrito</button>
                    </article>
                    <article class='txt-related-2'>
                        <p> Portrait of a giraffe </p>
                        <h2>$590</h2>
                        <button class='add-to-cart'>Agregar al carrito</button>
                    </article>
                </section>
            </div>
                <br>
                <br>
                <br>
                <br>
                <br>
                <br>
                <br>
                <br>
                <br>
                <br>
                <br>
                <br>
        </section>



        <script src="/JS/producto.js"></script>

        <%- include('./partials/footer') %>  
    </div>
</body>
</html>